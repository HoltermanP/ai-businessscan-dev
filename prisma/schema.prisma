generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quickscan {
  id                 String   @id @default(cuid())
  quickscanId        String   @unique
  url                String
  companyDescription String   @db.Text
  aiOpportunities    Json
  ipAddress          String? // Voor limiet tracking
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([quickscanId])
  @@index([createdAt])
  @@index([ipAddress])
}

model FullQuickscan {
  id           String    @id @default(cuid())
  quickscanId  String    @unique
  email        String
  url          String
  fullAnalysis Json
  emailSent    Boolean   @default(false)
  emailSentAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([quickscanId])
  @@index([email])
}
