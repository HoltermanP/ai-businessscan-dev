// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model Quickscan {
  id                String   @id @default(cuid())
  quickscanId       String   @unique
  url               String
  companyDescription String @db.Text
  aiOpportunities   Json
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([quickscanId])
  @@index([createdAt])
}

model FullQuickscan {
  id                String   @id @default(cuid())
  quickscanId       String   @unique
  email             String
  url               String
  fullAnalysis      Json
  emailSent         Boolean  @default(false)
  emailSentAt       DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([quickscanId])
  @@index([email])
}
